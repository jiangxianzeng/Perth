<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bianchengshu.rest.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.bianchengshu.rest.model.UserModel" >
        <id column="id" property="id" jdbcType="BIGINT" />

        <result column="age" property="age" jdbcType="BIGINT" />
        <result column="salary" property="salary" jdbcType="DOUBLE" />
        <!--result column="user_sex" property="userSex" javaType="com.neo.enums.UserSexEnum"/-->
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="nick_name" property="nickName" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, age, salary, name, nick_name
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM t_user
    </select>

    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM t_user
        WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.bianchengshu.rest.model.UserModel" >
        INSERT INTO
        t_user
        (age,salary,name, nick_name)
        VALUES
        (#{age}, #{salary}, #{name}, #{nickName})
    </insert>

    <update id="updateUserById" parameterType="com.bianchengshu.rest.model.UserModel" >
        UPDATE
        t_user
        <set>
          <if test="age != null">age = #{age},</if>
          <if test="salary != null">salary = #{salary},</if>
          <if test="name != null">name = #{name},</if>
          <if test="nickName != null">nick_name = #{nickName},</if>
        </set>
        WHERE
        id = #{id}
    </update>

    <delete id="deleteUserById" parameterType="java.lang.Long" >
        DELETE FROM
        t_user
        WHERE
        id =#{id}
    </delete>

</mapper>